# AutoGuard Environment Configuration
# Copy this file to .env and fill in your values

# ============================================================
# Required Configuration
# ============================================================

# JWT Secret for authentication (MUST CHANGE IN PRODUCTION)
# Generate with: openssl rand -base64 32
JWT_SECRET=your-super-secret-key-change-in-production

# Encryption key for sensitive settings (e.g. Gemini API key)
# Generate with: openssl rand -hex 32
ENCRYPTION_KEY=your-32-byte-hex-encryption-key

# System Domain
SYSTEM_DOMAIN=autoguard.dev

# ============================================================
# Database Configuration
# ============================================================

# SQLite database path
DATABASE_PATH=/data/db/autoguard.db

# Redis URL
REDIS_URL=redis://127.0.0.1:6379

# ============================================================
# GeoIP Configuration (MaxMind)
# ============================================================

# Download from: https://www.maxmind.com/en/geolite2/signup
GEOIP_DB_PATH=/app/geoip/GeoLite2-City.mmdb
GEOIP_ASN_DB_PATH=/app/geoip/GeoLite2-ASN.mmdb

# MaxMind License Key (for automatic updates)
# MAXMIND_LICENSE_KEY=your-license-key

# ============================================================
# AI Page Generation (Optional)
# ============================================================

# Google Gemini API Key
# Get from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=

# Default Gemini model (used when no user-level setting is configured)
GEMINI_MODEL=gemini-1.5-flash

# ============================================================
# Server Configuration
# ============================================================

# Node environment
NODE_ENV=production

# Server ports (internal)
WEB_PORT=3000
CLOAK_WORKER_PORT=3001

# ============================================================
# Logging
# ============================================================

# Log level: debug, info, warn, error
LOG_LEVEL=info

# Enable debug logging for specific modules
# DEBUG=autoguard:*

# ============================================================
# Optional: Cloudflare Configuration
# ============================================================

# Trust Cloudflare IP headers
# TRUST_PROXY=cloudflare

# Cloudflare API Token (for automatic DNS management)
# CLOUDFLARE_API_TOKEN=
# CLOUDFLARE_ZONE_ID=
